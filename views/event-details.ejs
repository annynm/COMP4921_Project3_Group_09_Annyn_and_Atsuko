<%- include('partials/header') %>
    <%- include('partials/nav', { activePage: 'events' }) %>

        <div class="container">
            <div class="event-details glass-card">
                <h1 style="color: var(--greendale-blue-dark); margin-bottom: 1rem;">
                    <%= event.event_name %>
                </h1>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 2rem;">
                    <div>
                        <h3 style="color: var(--greendale-blue);">Event Details</h3>
                        <p><strong>Host:</strong>
                            <%= event.owner_fname %>
                                <%= event.owner_lname %>
                        </p>
                        <p><strong>Date:</strong>
                            <span id="event-date">Loading...</span>
                        </p>
                        <p><strong>Time:</strong>
                            <span id="event-time">Loading...</span>
                        </p>
                        <% if (event.room_name) { %>
                            <p><strong>Room:</strong>
                                <%= event.room_name %> (Capacity: <%= event.room_capacity %>)
                            </p>
                            <% } %>
                                <p><strong>Privacy:</strong>
                                    <%= event.privacy_type.replace('_', ' ' ) %>
                                </p>
                    </div>

                    <div>
                        <h3 style="color: var(--greendale-blue);">Capacity</h3>
                        <p>
                            <%= event.attending_count %> attending
                        </p>
                        <% if (event.max_capacity) { %>
                            <p>
                                <%= event.max_capacity - event.attending_count %> spots remaining
                            </p>
                            <% } else { %>
                                <p>Unlimited spots available</p>
                                <% } %>
                    </div>
                </div>

                <div style="margin-bottom: 2rem;">
                    <h3 style="color: var(--greendale-blue);">Description</h3>
                    <p>
                        <%= event.event_description || 'No description provided.' %>
                    </p>
                </div>

                <div class="event-actions">
                    <% if (event.is_owner || event.is_admin) { %>
                        <a href="/event/<%= event.event_id %>/edit" class="btn btn-primary">Edit Event</a>
                        <button type="button" id="manage-invites-btn" class="btn btn-secondary">Manage Invites</button>
                        <form action="/event/<%= event.event_id %>/delete" method="POST" style="display: inline;"
                            onsubmit="return confirm('Are you sure you want to delete this event?');">
                            <button type="submit" class="btn btn-danger">Delete Event</button>
                        </form>
                        <% } %>

                            <form action="/event/<%= event.event_id %>/rsvp" method="POST" class="rsvp-form">
                                <select name="status" onchange="this.form.submit()">
                                    <option value="pending" <%=event.user_status==='pending' ? 'selected' : '' %>>Maybe
                                    </option>
                                    <option value="accepted" <%=event.user_status==='accepted' ? 'selected' : '' %>
                                        >Attending</option>
                                    <option value="declined" <%=event.user_status==='declined' ? 'selected' : '' %>>Not
                                        Attending</option>
                                </select>
                            </form>
                </div>
            </div>

            <!-- Invites section -->
            <% if (event.is_owner || event.is_admin) { %>
                <%- include('partials/invites', { event: event }) %>
                    <% } %>
        </div>

        <!-- Day.js from CDN -->
        <script src="https://cdn.jsdelivr.net/npm/dayjs@1.11.10/dayjs.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/dayjs@1.11.10/plugin/utc.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/dayjs@1.11.10/plugin/timezone.js"></script>
        <script>
            // Initialize Day.js and convert UTC to local timezone
            function convertEventTimes() {
                if (typeof dayjs === 'undefined' || typeof dayjs_plugin_utc === 'undefined' || typeof dayjs_plugin_timezone === 'undefined') {
                    setTimeout(convertEventTimes, 100);
                    return;
                }

                dayjs.extend(dayjs_plugin_utc);
                dayjs.extend(dayjs_plugin_timezone);

                const userTimezone = Intl.DateTimeFormat().resolvedOptions().timeZone;

                // Helper function to normalize UTC string to ISO format
                // Server now sends ISO strings, this is mainly for safety
                function normalizeUTCString(utcStr) {
                    if (!utcStr) return null;

                    // If it's already a Date object, convert to ISO
                    if (utcStr instanceof Date) {
                        return utcStr.toISOString();
                    }

                    // Convert to string
                    let str = String(utcStr).trim();

                    // If it's already in ISO format with Z, return as-is
                    if (str.endsWith('Z') && str.includes('T')) {
                        return str;
                    }

                    // Try to parse as Date (handles ISO strings without Z, and other formats)
                    const dateObj = new Date(str);
                    if (!isNaN(dateObj.getTime())) {
                        return dateObj.toISOString();
                    }

                    // Fallback: try to fix common formats
                    str = str.replace(' ', 'T');
                    str = str.replace(/\.\d{3}$/, '');
                    if (!str.match(/T\d{2}:\d{2}:\d{2}/)) {
                        str = str.replace(/T(\d{2}:\d{2})$/, 'T$1:00');
                    }
                    if (!str.endsWith('Z')) {
                        str = str + 'Z';
                    }

                    return str;
                }

                const startUTC = '<%= event.start_datetime %>';
                const endUTC = '<%= event.end_datetime %>';

                if (startUTC && endUTC) {
                    try {
                        const normalizedStart = normalizeUTCString(startUTC);
                        const normalizedEnd = normalizeUTCString(endUTC);

                        if (!normalizedStart || !normalizedEnd) {
                            console.error('Failed to normalize UTC values:', startUTC, endUTC);
                            return;
                        }

                        const startLocal = dayjs.utc(normalizedStart).tz(userTimezone);
                        const endLocal = dayjs.utc(normalizedEnd).tz(userTimezone);

                        if (!startLocal.isValid() || !endLocal.isValid()) {
                            console.error('Invalid dates after conversion:', normalizedStart, normalizedEnd);
                            return;
                        }

                        // Format date
                        const dateStr = startLocal.format('MMMM D, YYYY');
                        const dateEl = document.getElementById('event-date');
                        if (dateEl) {
                            dateEl.textContent = dateStr;
                        }

                        // Format time
                        const timeStr = startLocal.format('h:mm A') + ' - ' + endLocal.format('h:mm A');
                        const timeEl = document.getElementById('event-time');
                        if (timeEl) {
                            timeEl.textContent = timeStr;
                        }
                    } catch (error) {
                        console.error('Error converting event times:', error, startUTC, endUTC);
                    }
                }
            }

            // Wait for DOM and Day.js to be ready
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', convertEventTimes);
            } else {
                convertEventTimes();
            }
        </script>

        <script>
            // Handle Manage Invites button click
            document.addEventListener('DOMContentLoaded', function () {
                const manageInvitesBtn = document.getElementById('manage-invites-btn');
                const invitesSection = document.getElementById('invites-section');

                if (manageInvitesBtn && invitesSection) {
                    manageInvitesBtn.addEventListener('click', function () {
                        if (invitesSection.style.display === 'none' || !invitesSection.style.display) {
                            invitesSection.style.display = 'block';
                            // Load invite data when section is shown
                            if (typeof window.loadInviteData === 'function') {
                                window.loadInviteData();
                            }
                        } else {
                            invitesSection.style.display = 'none';
                        }
                    });
                }
            });
        </script>

        <%- include('partials/footer') %>
