<%- include('partials/header') %>
<%- include('partials/nav', { activePage: 'login' }) %>

<div class="container">
    <div class="glass-card login-form">
        <h1 style="color: var(--greendale-blue-dark); margin-bottom: 2rem; text-align: center;">Access Greendale Systems</h1>
        
        <% if (error) { %>
            <div style="background: var(--error); color: white; padding: 1rem; border-radius: 8px; margin-bottom: 1rem;">
                <%= error %>
            </div>
        <% } %>
        
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required autofocus>
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            
            <button type="submit" class="cta-button" style="width: 100%;">Login to Greendale</button>
        </form>
        
        <p style="text-align: center; margin-top: 1rem; color: var(--text-secondary);">
            Don't have an account? <a href="/register">Register here</a>
        </p>
    </div>
</div>

<%- include('partials/footer') %>
